<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".onboarding.DataManagerFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateBackup"
        style="@style/DefaultButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_s"
        android:text="Create backup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRestoreBackup"
        style="@style/DefaultButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Restore from backup"
        app:layout_constraintEnd_toEndOf="@+id/btnCreateBackup"
        app:layout_constraintStart_toStartOf="@+id/btnCreateBackup"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateBackup" />

</androidx.constraintlayout.widget.ConstraintLayout>